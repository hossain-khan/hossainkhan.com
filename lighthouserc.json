{
  "ci": {
    "collect": {
      "url": ["http://localhost:8080/"],
      "numberOfRuns": 3,
      "settings": {
        "chromeFlags": ["--headless"],
        "onlyCategories": ["performance"],
        "throttlingMethod": "simulate"
      }
    },
    "assert": {
      "assertions": {
        "_comment": "BASELINE THRESHOLDS - Current performance is poor, using realistic baselines to prevent CI failures",
        "_todo": "After Phase 1 optimizations, tighten these thresholds: perf >= 0.75, FCP <= 2000ms, LCP <= 4000ms, SI <= 4000ms",
        
        "categories:performance": ["warn", {"minScore": 0.3}],
        "first-contentful-paint": ["warn", {"maxNumericValue": 15000}],
        "largest-contentful-paint": ["warn", {"maxNumericValue": 45000}],
        "cumulative-layout-shift": ["error", {"maxNumericValue": 0.1}],
        "total-blocking-time": ["warn", {"maxNumericValue": 1000}],
        "speed-index": ["warn", {"maxNumericValue": 20000}]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
